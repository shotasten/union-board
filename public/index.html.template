<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <!-- スマホの実際の幅を使う（ここを 1200 固定にしてはいけない！） -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="robots" content="noindex, nofollow, noarchive, nosnippet">
  <title>UnionBoard</title>
  
  <!-- Favicon and App Icons -->
  <link rel="icon" type="image/x-icon" href="favicon.ico">
  <link rel="apple-touch-icon" sizes="180x180" href="apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="192x192" href="icon-192.png">
  <link rel="icon" type="image/png" sizes="512x512" href="icon-512.png">
  <link rel="icon" type="image/png" sizes="1024x1024" href="icon-1024.png">
  
  <!-- PWA Manifest -->
  <link rel="manifest" href="manifest.json">
  <meta name="theme-color" content="#667eea">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="default">
  <meta name="apple-mobile-web-app-title" content="UnionBoard">
  
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html, body {
      width: 100%;
      height: 100%;
    }

    /* iframe を縮小表示するためのラッパー */
    .iframe-wrapper {
      width: 100%;
      overflow-x: hidden;
      position: relative;
    }

    iframe {
      border: none;
      width: 1200px;  /* GAS 側と合わせる */
      height: 100vh;
      transform-origin: top left;
      display: block;
    }
  </style>
</head>
<body>
  <div class="iframe-wrapper">
    <iframe id="gas-app-iframe" src=""></iframe>
  </div>
  
  <script>
    // --- パラメータ転送 ---
    (function () {
      const baseUrl = '{{GAS_APP_URL}}';
      const urlParams = new URLSearchParams(window.location.search);
      let iframeUrl = baseUrl;

      urlParams.forEach((value, key) => {
        iframeUrl += (iframeUrl.includes('?') ? '&' : '?') + encodeURIComponent(key) + '=' + encodeURIComponent(value);
      });

      document.getElementById('gas-app-iframe').src = iframeUrl;
    })();

    // --- 画面幅に応じて iframe を縮小する ---
    function resizeIframe() {
      const baseWidth = 1200; // GAS 側 UI 基準
      const viewportWidth = window.innerWidth;
      const scale = Math.min(viewportWidth / baseWidth, 1); // 拡大はしない（最大1.0）
      const iframe = document.getElementById('gas-app-iframe');
      iframe.style.transform = `scale(${scale})`;
      // 縮小後の幅に合わせて wrapper の高さを調整
      const scaledHeight = window.innerHeight / scale;
      iframe.style.height = scaledHeight + "px";
    }

    // リサイズイベントのパフォーマンス最適化（throttle）
    let resizeTimer;
    function throttledResize() {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(resizeIframe, 100);
    }

    window.addEventListener("resize", throttledResize);
    window.addEventListener("load", resizeIframe);
    // 初期表示時にも実行
    resizeIframe();
  </script>
</body>
</html>

